/**index.wxss**/

.product-list {
  background: #f0f0f0;
  min-height: 100vh;
}

.product-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 24rpx;
  background: white;
  font-size: 30rpx;
  flex-direction: row;
}

.product-box {
  width: 339rpx;
  /* height: 472rpx; */
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.product-box .img-box {
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}

.product-box .img-box image {
  width: 339rpx;
  height: 339rpx;
}

.product-box .product-title {
  width: auto;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 10rpx 0 0rpx 0;
  color: #000;
  text-align: left;
  white-space: nowrap;
  /* display: -webkit-box; */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  /* margin-left: 24rpx; */
}

.product-box .product-price {
  width: 280rpx;
  overflow: hidden;
  padding: 20rpx 0;
  /* color: #222; */
  text-align: left;
  font-size: 30rpx;
  /* margin-left: 24rpx; */
}

.product-box .product-price-discount {
  display: flex;
  flex-direction: row;
  width: 280rpx;
  overflow: hidden;
  padding: 20rpx 0;
  /* color: #222; */
  text-align: left;
  align-items: baseline;
  /* margin-left: 24rpx; */
}

.price {
  color: #ff3e62;
  font-size: 30rpx;
}

.price-discount {
  text-decoration: line-through;
  color: #999;
  margin-left: 10rpx;
  font-size: 24rpx;
}

.no-more-product {
  width: 100%;
  flex: 2;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  background-color: #f0f0f0;
}

.refresh-block {
  text-align: center;
  flex: 2;
}

.refresh-block image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.refresh-block span {
  font-size: 30rpx;
  color: #999;
  margin-top: -20rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.icon-top {
  z-index: 200;
  position: fixed;
  right: 0;
  bottom: 0;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 60rpx;
  float: right;
}

.icon-service {
  z-index: 200;
  position: fixed;
  right: 0;
  top: 0;
  width: 80rpx;
  height: 80rpx;
  margin-top: 72%;
  margin-right: 20rpx;
  float: right;
}
