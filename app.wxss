.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  line-height: 1;
} 

button::after{
  border: none;
}

.divide {
  height: 1rpx;
  background: #f0f0f0;
}

.divide_10 {
  height: 10rpx;
  background: #f0f0f0;
}

.divide_20 {
  height: 20rpx;
  background: #f0f0f0;
}

.divide_30 {
  height: 30rpx;
  background: #f0f0f0;
}

.divide_40 {
  height: 40rpx;
  background: #f0f0f0;
}

.divide_50 {
  height: 50rpx;
  background: #f0f0f0;
}

.divide_60 {
