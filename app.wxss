/** 价格显示样式 **/

.price {
  color: #ff3e62;
}

.btn-blue {
  background: #8cc8ff;
}
.btn-b {
  background: #bbb;
}

.btn {
  background: #8cc8ff;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
  padding: 0rpx;
}

.btn-sm {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.container {
  font-family: PingFangSC-Regular, sans-serif;
}
