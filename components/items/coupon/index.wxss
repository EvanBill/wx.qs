/* components/items/coupon/index.wxss */

.item-coupon-container {
width: 100%;
height: 200rpx;
display: flex;
flex-direction: row;
margin-bottom: 20rpx;
}

.item-coupon-container-bg {
width: 710rpx;
height: 200rpx;
position: absolute;
left: 20rpx;
}

.item-coupon-container-bg-image {
width: 100%;
height: 200rpx;
}

.item-coupon-container-left {
display: flex;
flex-direction: column;
z-index: 1000;
justify-content: center;
width: 240rpx;
}

.item-coupon-container-left-amount {
color: #fff;
font-size: 60rpx;
font-weight: bold;
margin-left: 30rpx;
}

.item-coupon-container-left-amount-info {
color: #fff;
font-size: 28rpx;
margin-top: 20rpx;
margin-left: 40rpx;
}

.item-coupon-container-right {
display: flex;
flex-direction: column;
z-index: 1000;
justify-content: center;
padding-left: 40rpx;
flex: 1;
padding-right: 20rpx;
}

.item-coupon-container-name {
color: #222;
font-size: 30rpx;
}

.item-coupon-container-time {
color: #999;
font-size: 24rpx;
margin-top: 20rpx;
}

.item-coupon-container-right-use-container {
display: flex;
justify-content: space-between;
align-items: center;
margin-top: 20rpx;
}

.item-coupon-container-btn-use {
color: #ff7149;
font-size: 24rpx;
background-color: #fff;
border: 1px solid #ff7149;
border-radius: 80rpx;
margin-left: 0rpx;
margin-right: 0rpx;
line-height: 2;
text-align: center;
}

.item-coupon-container-btn-use-unabviable {
color: #999;
font-size: 24rpx;
background-color: #fff;
border: 1px solid #999;
border-radius: 80rpx;
margin-left: 0rpx;
margin-right: 0rpx;
line-height: 2;
}

.item-coupon-container-btn-use-info {
color: #ff7149;
font-size: 24rpx;
}