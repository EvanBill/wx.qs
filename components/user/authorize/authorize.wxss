.header {
  margin: 90rpx 0 60rpx 50rpx;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.divide {
  height: 1px;
  background: #f0f0f0;
}

.header image {
  width: 200rpx;
  height: 200rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
  font-size: 34rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 30rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 34rpx;
  background: #8cc8ff;
  color: white;
}
